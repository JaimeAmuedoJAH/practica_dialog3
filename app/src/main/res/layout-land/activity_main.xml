<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnName"
            android:layout_width="@dimen/buttons"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/background_button"
            android:text="@string/btn_name"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            app:cornerRadius="@dimen/corner_radius" />

        <TextView
            android:id="@+id/lblName"
            android:layout_width="@dimen/labels"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_lblAndBtn"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/btnSurNames"
            android:layout_width="@dimen/buttons"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/background_button"
            android:text="@string/btn_surname"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            app:cornerRadius="@dimen/corner_radius" />

        <TextView
            android:id="@+id/lblSurNames"
            android:layout_width="@dimen/labels"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_lblAndBtn"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/btnCourse"
            android:layout_width="@dimen/buttons"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/background_button"
            android:text="@string/btn_Course"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            app:cornerRadius="@dimen/corner_radius" />

        <TextView
            android:id="@+id/lblCourse"
            android:layout_width="@dimen/labels"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_lblAndBtn"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <Button
            android:id="@+id/btnLanguages"
            android:layout_width="@dimen/buttons"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/background_button"
            android:text="@string/btn_languages"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            app:cornerRadius="@dimen/corner_radius" />

        <TextView
            android:id="@+id/lblLanguages"
            android:layout_width="@dimen/labels"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_lblAndBtn"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:id="@+id/btnOs"
            android:layout_width="@dimen/buttons"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/background_button"
            android:text="@string/btn_so"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            app:cornerRadius="@dimen/corner_radius" />

        <TextView
            android:id="@+id/lblOs"
            android:layout_width="@dimen/labels"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_lblAndBtn"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="@dimen/textSize" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>